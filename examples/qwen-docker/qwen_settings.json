{
  "mcpServers": {
    "github-app": {
      "command": "python3",
      "args": ["-m", "mcp_github_app.server"],
      "env": {
        "GITHUB_APP_ID": "${env:GITHUB_APP_ID}",
        "GITHUB_PRIVATE_KEY": "${env:GITHUB_PRIVATE_KEY}",
        "GITHUB_INSTALLATION_ID": "${env:GITHUB_INSTALLATION_ID}"
      },
      "trust": true,
      "timeout": 30000
    }
  }
}